body {
  background-color: #fff;
  font-family: Lato, "Microsoft Jhenghei", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  margin: 0;
}

a {
  text-decoration: none;
  color: #666;
}

a:hover {
  color: #222;
  text-decoration: underline;
}

.cotainer {
  max-width: 960px;
  margin: 0 auto;
  padding-bottom: 100px;
  box-shadow: 0 0 5px 1px #ddd;
  min-height: 768px;
}

#top-button {
  padding: 5px;
  width: 30px;
  height: 30px;
  position: fixed;
  bottom: 50px;
  right: 50px;
  img {
    width: 100%;
    height: 100%;
  }
}

.copyright {
  text-align: center;
}

@import "_partial/header";
@import "_partial/post";
@import "_partial/archive";
@import "_partial/code";
@import "_partial/paginator";