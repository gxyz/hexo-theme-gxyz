@media screen and (max-width: 768px) {
  .post {
    padding: 5px;
  }

  pre {
    margin: 0 -5px 0 -5px;
  }
}

@media screen and (min-width: 768px) {
  .post {
    padding: 30px 50px;
  }

  pre {
    margin: 0 -50px 0 -50px;
  }
}

.post {
  background-color: #fff;

  p {
      font-size: 0.9em;
      line-height: 1.5;
      letter-spacing: 0.5px;
  }

  h2 {
      font-size: 1.8em;
  }

  .post-meta  {
    margin-bottom: 20px;
  }

  #show-post-list {
    float: right;
  }

  .post-time {
    color: #ddd;
  }

  .other {
    margin-top: 50px;
    display: inline-block;    
    border: 1px solid #000;
    padding: 5px 10px;
    height: 14px;
    border-radius: 20px; 
    text-decoration: none;
    line-height: 14px;
    font-size: 14px;
  }
  .other a {
    text-decoration: none;
    color: #000;
  }
  .old-post {
    float: left;
  }

  .old-post::before {
    content: "<"
    display: inline-block;
    font-size: 20px;

  }
  .new-post {
    float: right;
  }
  .new-post::after {
    content: ">"
    display: inline-block;
    font-size: 20px;

  }

  // post list
  #post-list {
    width: 300px;
    position: fixed;
    font-size: 13px;
    //background-color: rgba(65, 75, 78, 0.6);
    backgrounf-color: #fff;
    top: 0;
    right: -320px;
    height: 100%;
    color: #000;
    padding-left: 15px;
    ol {
      padding-left: 12px;
      line-height: 1.5em;
      a {
        color: #000;
        text-decoration: none;
      }
    }
    .toc-number {
      display: none;
    }
  }

}

.post:not(:last-child) {
  border-bottom: 1px dashed #ddd;
}

.posts  {
  .post:first-child {
    margin-top: 0;
  }
  .post-title {
    h2 {
      margin: 10px 0;
    }
    .post-title-link {
      color: #000;
      text-decoration: none;
    }
    .post-title-link:hover {
      border-bottom: 1px solid #368CCB;
    }
  }
  .post-content {
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }
  .post-meta {
    color: #BABABA;
    font-size: 0.8em;
  }
  .more {
    margin-top: 20px;
    
    a {
      text-decoration: none;
      color: #000;
    }
    a:hover {
      border-bottom: 1px solid #368CCB;
    }
  }
}

