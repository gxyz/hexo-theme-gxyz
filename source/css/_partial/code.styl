// post code style
pre {
  padding: 20px 0;
  line-height: 1.2em;
  font-size: 16px;
  overflow: auto;
  code {
    font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace;
  }
}

p code {
  background-color: #555;
  color: #fff;
  font-size: 16px;
  padding: 2px;
  border-radius: 5px;
  font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace;
}