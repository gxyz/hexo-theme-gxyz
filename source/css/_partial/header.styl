header::after {
  content: "";
  display: block;
  clear: both;
}

header {
  padding: 20px 20px;
  .blog-title .logo {
    color: #000;
    font-size: 2em;
    font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
    text-decoration: none;
    float: left;
  }
  .menu {
    // margin: 30px 0 30px 30px;
    margin: 0 20px;
    padding: 0;
    float: right;
    .menu-item {
      display: inline-block;
      margin-right: 10px;
      line-height: 50px;
    }
    .menu-item-link {
      color: #555;
      text-decoration: none;
      font-weight: bold;
      &:hover {
        color: #000;
      }
    }
  }
}