header::after {
  content: "";
  display: block;
  clear: both;
}

header {
  // padding: 20px 20px;
  padding-left: 40px;
  height: 60px;
  line-height: 60px;
  background-color: rgba(0, 0, 0, 1);
  .blog-title .logo {
    color: #fff;
    font-size: 2em;
    font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
    text-decoration: none;
    float: left;
  }
  .menu {
    // margin: 30px 0 30px 30px;
    margin: 0 20px;
    padding: 0;
    float: right;
    .menu-item {
      display: inline-block;
      margin-right: 10px;
      line-height: 50px;
    }
    .menu-item-link {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      &:hover {
        color: #ccc;
      }
    }
  }
}